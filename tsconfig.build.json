{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "include": ["./src"],
  "exclude": [
    "./src/**/*.test.ts",
    "./src/**/*.test.tsx",
    "./src/testing/internal/"
  ],
  "compilerOptions": {
    "noEmit": false,
    "rootDir": "./src",
    "outDir": "./dist",
    "lib": ["DOM"],
    "inlineSources": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true
  }
}
