{
  "compilerOptions": {
    "rootDir": "./src",
    "noImplicitAny": true,
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "esnext",
    "types": [],
    "lib": ["dom", "esnext"],
    "inlineSources": true,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noUncheckedSideEffectImports": true,
    "noUnusedLocals": true,
    "moduleDetection": "force",
    "skipLibCheck": true,
    "esModuleInterop": true
  }
}
